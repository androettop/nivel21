{
  "manifest_version": 3,
  "name": "N21",
  "version": "1.0",
  "description": "Automatiza y mejora la experiencia en Nivel20.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/background.js",
    "scripts": ["src/background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "n21@nivel20.extension"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://nivel20.com/*"],
      "js": ["src/content/content.js"],
      "css": ["src/styles/style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/injected/jquery-checker.js",
        "src/core/core.js",
        "src/features/advantage-disadvantage.js",
        "src/features/send-to-chat.js",
        "src/features/parse-chat-links.js",
        "src/features/token-hotkeys.js",
        "src/features/token-height-order.js",
        "src/features/snap-to-grid.js",
        "src/features/multi-measurement.js"
      ],
      "matches": ["https://nivel20.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}