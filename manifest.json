{
  "manifest_version": 3,
  "name": "Nivel21",
  "version": "1.2.3",
  "description": "Automatiza y mejora la experiencia en Nivel20.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/background.js",
    "scripts": ["src/background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "n21@nivel20.extension",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://nivel20.com/*"],
      "js": ["src/content/content.js"],
      "css": ["src/styles/style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/lib/purify.min.js",
        "src/injected/jquery-checker.js",
        "src/core/utils.js",
        "src/core/base-manager.js",
        "src/core/key-modifiers-manager.js",
        "src/core/chat-manager.js",
        "src/core/player-manager.js",
        "src/core/token-manager.js",
        "src/core/measurement-manager.js",
        "src/core/dice-manager.js",
        "src/core/floating-panel-manager.js",
        "src/core/action-bar-manager.js",
        "src/core/chat-ui-manager.js",
        "src/core/tooltip-manager.js",
        "src/core/html-manager.js",
        "src/core/session-state-manager.js",
        "src/core/main-menu-ui-manager.js",
        "src/features/advantage-disadvantage.js",
        "src/features/send-to-chat.js",
        "src/features/parse-chat-links.js",
        "src/features/token-hotkeys.js",
        "src/features/token-height-order.js",
        "src/features/snap-to-grid.js",
        "src/features/multi-measurement.js",
        "src/features/whisper-mode.js",
        "src/features/multi-level-action-bar.js",
        "src/features/session-state-demo.js",
        "src/features/ambient-fx.js"
      ],
      "matches": ["https://nivel20.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}