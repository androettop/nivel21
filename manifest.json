{
  "manifest_version": 3,
  "name": "N21",
  "version": "1.0",
  "description": "Automatiza y mejora la experiencia en Nivel20.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://nivel20.com/tabletop/*"],
      "js": ["src/content/content.js"],
      "css": ["styles/style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/injected/jquery-checker.js",
        "src/core/core.js",
        "src/features/advantage-disadvantage.js",
        "src/features/send-to-chat.js"
      ],
      "matches": ["https://nivel20.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}